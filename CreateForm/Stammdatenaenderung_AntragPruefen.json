{
  "components": [
    {
      "type": "text",
      "text": "# Antrag prüfen\n\nBitte prüfen Sie den eingereichten Änderungsantrag auf Vollständigkeit und Plausibilität.",
      "id": "Text_Header",
      "layout": { "row": "Row_1" }
    },
    {
      "type": "separator",
      "id": "Separator_1",
      "layout": { "row": "Row_2" }
    },
    {
      "type": "group",
      "id": "Group_Antragsdaten",
      "label": "Antragsdaten",
      "showOutline": true,
      "layout": { "row": "Row_3" },
      "components": [
        {
          "type": "textfield",
          "id": "Field_Antragsteller",
          "key": "antragsteller",
          "label": "Antragsteller",
          "description": "Name des Antragstellers",
          "readonly": true,
          "layout": { "row": "Row_4", "columns": 8 }
        },
        {
          "type": "datetime",
          "id": "Field_Antragsdatum",
          "key": "antragsdatum",
          "subtype": "date",
          "dateLabel": "Antragsdatum",
          "readonly": true,
          "layout": { "row": "Row_4", "columns": 8 }
        },
        {
          "type": "select",
          "id": "Field_Aenderungsart",
          "key": "aenderungsart",
          "label": "Art der Änderung",
          "values": [
            { "label": "Namensänderung", "value": "name" },
            { "label": "Adressänderung", "value": "adresse" },
            { "label": "Bankverbindung", "value": "bankverbindung" },
            { "label": "Kontaktdaten", "value": "kontaktdaten" },
            { "label": "Sonstiges", "value": "sonstiges" }
          ],
          "readonly": true,
          "layout": { "row": "Row_5" }
        },
        {
          "type": "textarea",
          "id": "Field_Aenderungsdetails",
          "key": "aenderungsdetails",
          "label": "Details zur Änderung",
          "description": "Beschreibung der gewünschten Änderung",
          "readonly": true,
          "layout": { "row": "Row_6" }
        }
      ]
    },
    {
      "type": "spacer",
      "id": "Spacer_1",
      "height": 20,
      "layout": { "row": "Row_7" }
    },
    {
      "type": "group",
      "id": "Group_Pruefung",
      "label": "Prüfergebnis",
      "showOutline": true,
      "layout": { "row": "Row_8" },
      "components": [
        {
          "type": "checklist",
          "id": "Field_Pruefkriterien",
          "key": "pruefkriterien",
          "label": "Prüfkriterien",
          "description": "Bitte alle zutreffenden Punkte abhaken",
          "values": [
            { "label": "Antrag vollständig ausgefüllt", "value": "vollstaendig" },
            { "label": "Angaben plausibel", "value": "plausibel" },
            { "label": "Änderungswunsch nachvollziehbar", "value": "nachvollziehbar" },
            { "label": "Keine offensichtlichen Fehler", "value": "fehlerfrei" }
          ],
          "layout": { "row": "Row_9" }
        },
        {
          "type": "radio",
          "id": "Field_Pruefergebnis",
          "key": "pruefergebnis",
          "label": "Prüfergebnis",
          "values": [
            { "label": "Antrag genehmigt - zur weiteren Bearbeitung freigeben", "value": "genehmigt" },
            { "label": "Rückfragen erforderlich", "value": "rueckfrage" },
            { "label": "Antrag abgelehnt", "value": "abgelehnt" }
          ],
          "validate": { "required": true },
          "layout": { "row": "Row_10" }
        },
        {
          "type": "textarea",
          "id": "Field_Begruendung",
          "key": "pruefBegruendung",
          "label": "Begründung / Anmerkungen",
          "description": "Bei Rückfragen oder Ablehnung bitte Begründung angeben",
          "conditional": {
            "hide": "=pruefergebnis = 'genehmigt'"
          },
          "validate": {
            "maxLength": 1000
          },
          "layout": { "row": "Row_11" }
        }
      ]
    },
    {
      "type": "spacer",
      "id": "Spacer_2",
      "height": 20,
      "layout": { "row": "Row_12" }
    },
    {
      "type": "separator",
      "id": "Separator_2",
      "layout": { "row": "Row_13" }
    },
    {
      "type": "checkbox",
      "id": "Field_PruefungAbgeschlossen",
      "key": "pruefungAbgeschlossen",
      "label": "Ich bestätige, dass ich den Antrag vollständig geprüft habe.",
      "validate": { "required": true },
      "layout": { "row": "Row_14" }
    },
    {
      "type": "button",
      "id": "Button_Submit",
      "key": "submit",
      "label": "Prüfung abschließen",
      "action": "submit",
      "layout": { "row": "Row_15" }
    }
  ],
  "type": "default",
  "id": "Form_AntragPruefen",
  "exporter": {
    "name": "GitHub-Copilot-GovModeler",
    "version": "1.0.0"
  },
  "executionPlatform": "Camunda Platform",
  "executionPlatformVersion": "7.20.0",
  "schemaVersion": 16
}
