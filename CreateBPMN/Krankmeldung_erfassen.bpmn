<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions
  xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC"
  xmlns:di="http://www.omg.org/spec/DD/20100524/DI"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:camunda="http://camunda.org/schema/1.0/bpmn"
  targetNamespace="http://example.com/bpmn"
  exporter="GitHub-Copilot-GovModeler"
  exporterVersion="2.0"
  modeler:executionPlatform="Camunda Platform"
  modeler:executionPlatformVersion="7.20.0">

  <!-- =====================================================
       COLLABORATION - Krankmeldeprozess
       ===================================================== -->
  <bpmn:collaboration id="Collab_Krankmeldung">
    
    <!-- Participant: Mitarbeiter -->
    <bpmn:participant id="Participant_Mitarbeiter"
                      name="Mitarbeiter"
                      processRef="Process_Mitarbeiter" />
    
    <!-- Participant: IT-System -->
    <bpmn:participant id="Participant_IT"
                      name="IT-System"
                      processRef="Process_IT" />
    
    <!-- Participant: Personalabteilung -->
    <bpmn:participant id="Participant_Personalabteilung"
                      name="Personalabteilung"
                      processRef="Process_Personalabteilung" />
    
    <!-- Message Flows -->
    <bpmn:messageFlow id="MsgFlow_Krankmeldung"
                      name="Krankmeldung"
                      sourceRef="Task_Krankmeldung_erfassen"
                      targetRef="Task_Krankmeldung_validieren" />
    
    <bpmn:messageFlow id="MsgFlow_AU_Bescheinigung"
                      name="AU-Bescheinigung"
                      sourceRef="Task_AU_hochladen"
                      targetRef="Task_Krankmeldung_validieren" />
    
    <bpmn:messageFlow id="MsgFlow_Zur_Pruefung"
                      name="Zur Pruefung weiterleiten"
                      sourceRef="Task_Personaldaten_aktualisieren"
                      targetRef="Task_Krankmeldung_genehmigen" />
    
    <bpmn:messageFlow id="MsgFlow_Bestaetigung"
                      name="Genehmigungsbestaetigung"
                      sourceRef="Task_Krankmeldung_genehmigen"
                      targetRef="EndEvent_Mitarbeiter" />
  </bpmn:collaboration>

  <!-- =====================================================
       MITARBEITER PROZESS
       ===================================================== -->
  <bpmn:process id="Process_Mitarbeiter"
                name="Krankmeldung_Mitarbeiter"
                isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_Mitarbeiter" name="Arbeitsunfaehigkeit eingetreten">
      <bpmn:outgoing>Flow_Start_Erfassen</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- User Task: Krankmeldung erfassen -->
    <bpmn:userTask id="Task_Krankmeldung_erfassen" name="Krankmeldung erfassen">
      <bpmn:incoming>Flow_Start_Erfassen</bpmn:incoming>
      <bpmn:outgoing>Flow_Erfassen_Upload</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- User Task: AU hochladen -->
    <bpmn:userTask id="Task_AU_hochladen" name="AU-Bescheinigung hochladen">
      <bpmn:incoming>Flow_Erfassen_Upload</bpmn:incoming>
      <bpmn:outgoing>Flow_Upload_Ende</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- End Event -->
    <bpmn:endEvent id="EndEvent_Mitarbeiter" name="Krankmeldung bestaetigt">
      <bpmn:incoming>Flow_Upload_Ende</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_Start_Erfassen"
                       sourceRef="StartEvent_Mitarbeiter"
                       targetRef="Task_Krankmeldung_erfassen" />
    
    <bpmn:sequenceFlow id="Flow_Erfassen_Upload"
                       sourceRef="Task_Krankmeldung_erfassen"
                       targetRef="Task_AU_hochladen" />
    
    <bpmn:sequenceFlow id="Flow_Upload_Ende"
                       sourceRef="Task_AU_hochladen"
                       targetRef="EndEvent_Mitarbeiter" />
  </bpmn:process>

  <!-- =====================================================
       IT-SYSTEM PROZESS
       ===================================================== -->
  <bpmn:process id="Process_IT"
                name="IT_System_Prozess"
                isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_IT" name="Krankmeldung empfangen">
      <bpmn:outgoing>Flow_IT_Start_Validieren</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- Service Task: Krankmeldung validieren -->
    <bpmn:serviceTask id="Task_Krankmeldung_validieren" name="Krankmeldung validieren">
      <bpmn:incoming>Flow_IT_Start_Validieren</bpmn:incoming>
      <bpmn:outgoing>Flow_Validieren_Aktualisieren</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- Service Task: Personaldaten aktualisieren -->
    <bpmn:serviceTask id="Task_Personaldaten_aktualisieren" name="Personaldaten aktualisieren">
      <bpmn:incoming>Flow_Validieren_Aktualisieren</bpmn:incoming>
      <bpmn:outgoing>Flow_Aktualisieren_Ende</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <!-- End Event -->
    <bpmn:endEvent id="EndEvent_IT" name="Daten aktualisiert">
      <bpmn:incoming>Flow_Aktualisieren_Ende</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_IT_Start_Validieren"
                       sourceRef="StartEvent_IT"
                       targetRef="Task_Krankmeldung_validieren" />
    
    <bpmn:sequenceFlow id="Flow_Validieren_Aktualisieren"
                       sourceRef="Task_Krankmeldung_validieren"
                       targetRef="Task_Personaldaten_aktualisieren" />
    
    <bpmn:sequenceFlow id="Flow_Aktualisieren_Ende"
                       sourceRef="Task_Personaldaten_aktualisieren"
                       targetRef="EndEvent_IT" />
  </bpmn:process>

  <!-- =====================================================
       PERSONALABTEILUNG PROZESS
       ===================================================== -->
  <bpmn:process id="Process_Personalabteilung"
                name="Personalabteilung_Prozess"
                isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_Personalabteilung" name="Krankmeldung zur Pruefung">
      <bpmn:outgoing>Flow_PA_Start_Genehmigen</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- User Task: Krankmeldung genehmigen -->
    <bpmn:userTask id="Task_Krankmeldung_genehmigen" name="Krankmeldung genehmigen">
      <bpmn:incoming>Flow_PA_Start_Genehmigen</bpmn:incoming>
      <bpmn:outgoing>Flow_Genehmigen_Ende</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- End Event -->
    <bpmn:endEvent id="EndEvent_Personalabteilung" name="Krankmeldung bearbeitet">
      <bpmn:incoming>Flow_Genehmigen_Ende</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- Sequence Flows -->
    <bpmn:sequenceFlow id="Flow_PA_Start_Genehmigen"
                       sourceRef="StartEvent_Personalabteilung"
                       targetRef="Task_Krankmeldung_genehmigen" />
    
    <bpmn:sequenceFlow id="Flow_Genehmigen_Ende"
                       sourceRef="Task_Krankmeldung_genehmigen"
                       targetRef="EndEvent_Personalabteilung" />
  </bpmn:process>

  <!-- =====================================================
       MESSAGE DEFINITIONEN
       ===================================================== -->
  <bpmn:message id="Message_Krankmeldung" name="Krankmeldung" />
  <bpmn:message id="Message_AU_Bescheinigung" name="AU-Bescheinigung" />
  <bpmn:message id="Message_Zur_Pruefung" name="Zur Pruefung" />
  <bpmn:message id="Message_Bestaetigung" name="Genehmigungsbestaetigung" />

  <!-- =====================================================
       BPMN-DI VISUALISIERUNG
       ===================================================== -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_Krankmeldung">
    <bpmndi:BPMNPlane id="BPMNPlane_Krankmeldung" bpmnElement="Collab_Krankmeldung">
      
      <!-- ===============================
           POOL: MITARBEITER
           =============================== -->
      <bpmndi:BPMNShape id="Participant_Mitarbeiter_di" bpmnElement="Participant_Mitarbeiter" isHorizontal="true">
        <dc:Bounds x="160" y="80" width="1200" height="250" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="170" y="185" width="20" height="80" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Mitarbeiter Process Elements -->
      <bpmndi:BPMNShape id="StartEvent_Mitarbeiter_di" bpmnElement="StartEvent_Mitarbeiter">
        <dc:Bounds x="222" y="182" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="200" y="225" width="80" height="40" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Task_Krankmeldung_erfassen_di" bpmnElement="Task_Krankmeldung_erfassen">
        <dc:Bounds x="310" y="160" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Task_AU_hochladen_di" bpmnElement="Task_AU_hochladen">
        <dc:Bounds x="470" y="160" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_Mitarbeiter_di" bpmnElement="EndEvent_Mitarbeiter">
        <dc:Bounds x="1212" y="182" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1190" y="225" width="80" height="40" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Mitarbeiter Sequence Flows -->
      <bpmndi:BPMNEdge id="Flow_Start_Erfassen_di" bpmnElement="Flow_Start_Erfassen">
        <di:waypoint x="258" y="200" />
        <di:waypoint x="310" y="200" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_Erfassen_Upload_di" bpmnElement="Flow_Erfassen_Upload">
        <di:waypoint x="410" y="200" />
        <di:waypoint x="470" y="200" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_Upload_Ende_di" bpmnElement="Flow_Upload_Ende">
        <di:waypoint x="570" y="200" />
        <di:waypoint x="891" y="200" />
        <di:waypoint x="891" y="200" />
        <di:waypoint x="1212" y="200" />
      </bpmndi:BPMNEdge>
      
      <!-- ===============================
           POOL: IT-SYSTEM
           =============================== -->
      <bpmndi:BPMNShape id="Participant_IT_di" bpmnElement="Participant_IT" isHorizontal="true">
        <dc:Bounds x="160" y="370" width="1200" height="250" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="170" y="465" width="20" height="80" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- IT Process Elements -->
      <bpmndi:BPMNShape id="StartEvent_IT_di" bpmnElement="StartEvent_IT">
        <dc:Bounds x="222" y="477" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="200" y="520" width="80" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Task_Krankmeldung_validieren_di" bpmnElement="Task_Krankmeldung_validieren">
        <dc:Bounds x="310" y="455" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Task_Personaldaten_aktualisieren_di" bpmnElement="Task_Personaldaten_aktualisieren">
        <dc:Bounds x="470" y="455" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_IT_di" bpmnElement="EndEvent_IT">
        <dc:Bounds x="632" y="477" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="610" y="520" width="80" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- IT Sequence Flows -->
      <bpmndi:BPMNEdge id="Flow_IT_Start_Validieren_di" bpmnElement="Flow_IT_Start_Validieren">
        <di:waypoint x="258" y="495" />
        <di:waypoint x="310" y="495" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_Validieren_Aktualisieren_di" bpmnElement="Flow_Validieren_Aktualisieren">
        <di:waypoint x="410" y="495" />
        <di:waypoint x="470" y="495" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_Aktualisieren_Ende_di" bpmnElement="Flow_Aktualisieren_Ende">
        <di:waypoint x="570" y="495" />
        <di:waypoint x="632" y="495" />
      </bpmndi:BPMNEdge>
      
      <!-- ===============================
           POOL: PERSONALABTEILUNG
           =============================== -->
      <bpmndi:BPMNShape id="Participant_Personalabteilung_di" bpmnElement="Participant_Personalabteilung" isHorizontal="true">
        <dc:Bounds x="160" y="660" width="1200" height="250" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="170" y="725" width="20" height="120" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Personalabteilung Process Elements -->
      <bpmndi:BPMNShape id="StartEvent_Personalabteilung_di" bpmnElement="StartEvent_Personalabteilung">
        <dc:Bounds x="222" y="767" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="200" y="810" width="80" height="40" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Task_Krankmeldung_genehmigen_di" bpmnElement="Task_Krankmeldung_genehmigen">
        <dc:Bounds x="310" y="745" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_Personalabteilung_di" bpmnElement="EndEvent_Personalabteilung">
        <dc:Bounds x="472" y="767" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="450" y="810" width="80" height="40" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- Personalabteilung Sequence Flows -->
      <bpmndi:BPMNEdge id="Flow_PA_Start_Genehmigen_di" bpmnElement="Flow_PA_Start_Genehmigen">
        <di:waypoint x="258" y="785" />
        <di:waypoint x="310" y="785" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_Genehmigen_Ende_di" bpmnElement="Flow_Genehmigen_Ende">
        <di:waypoint x="410" y="785" />
        <di:waypoint x="472" y="785" />
      </bpmndi:BPMNEdge>
      
      <!-- ===============================
           MESSAGE FLOWS
           =============================== -->
      <bpmndi:BPMNEdge id="MsgFlow_Krankmeldung_di" bpmnElement="MsgFlow_Krankmeldung">
        <di:waypoint x="360" y="240" />
        <di:waypoint x="360" y="455" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="365" y="340" width="80" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="MsgFlow_AU_Bescheinigung_di" bpmnElement="MsgFlow_AU_Bescheinigung">
        <di:waypoint x="520" y="240" />
        <di:waypoint x="520" y="348" />
        <di:waypoint x="380" y="348" />
        <di:waypoint x="380" y="455" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="420" y="330" width="90" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="MsgFlow_Zur_Pruefung_di" bpmnElement="MsgFlow_Zur_Pruefung">
        <di:waypoint x="520" y="535" />
        <di:waypoint x="520" y="638" />
        <di:waypoint x="360" y="638" />
        <di:waypoint x="360" y="745" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="390" y="620" width="90" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="MsgFlow_Bestaetigung_di" bpmnElement="MsgFlow_Bestaetigung">
        <di:waypoint x="360" y="745" />
        <di:waypoint x="360" y="638" />
        <di:waypoint x="1230" y="638" />
        <di:waypoint x="1230" y="218" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="740" y="620" width="90" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>

</bpmn:definitions>
